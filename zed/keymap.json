[
  {
    "bindings": {
      "cmd-h": null,
      "cmd-j": "menu::SelectNext",
      "cmd-k": "menu::SelectPrevious",
      "ctrl-shift-o": "projects::OpenRecent"
    }
  },
  // Pane Navigation from Editor
  {
    "context": "Editor",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-shift-h": "pane::ActivatePreviousItem",
      "ctrl-shift-l": "pane::ActivateNextItem",
      "ctrl-shift-j": "vim::ScrollDown",
      "ctrl-shift-k": "vim::ScrollUp",
      "ctrl--": "zed::DecreaseBufferFontSize",
      "ctrl-=": "zed::IncreaseBufferFontSize",
      "ctrl-d": "pane::SplitRight",
      "ctrl-shift-d": "pane::SplitDown",
      "cmd-shift-c": "workspace::CopyRelativePath"
    }
  },
  // Pane Navigation from Terminal
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-l": "workspace::ActivatePaneRight"
    }
  },
  // Pane Navigation from Project Panel
  {
    "context": "ProjectPanel",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-l": "workspace::ActivatePaneRight"
    }
  },
  {
    "context": "Editor && (showing_code_actions || showing_completions)",
    "bindings": {
      "cmd-j": "editor::ContextMenuNext",
      "cmd-k": "editor::ContextMenuPrevious"
    }
  }
]
